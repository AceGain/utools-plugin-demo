{
  "compilerOptions": {
    "composite": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    /* 不允许变量或函数具有隐式类型 */
    "noImplicitAny": false,
    "sourceMap": true,

    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    /* 不允许未使用参数 */
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,

    /* uTools */
    // https://www.npmjs.com/package/utools-api-types
    "types": [
      "utools-api-types"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "src/**/*.png",
    "src/**/*.jpg",
    "src/**/*.svg",
    "vite.config.ts"
  ]
}
